{
  "$schema": "https://raw.githubusercontent.com/reVISit-studies/study/main/src/parser/StudyConfigSchema.json",
  "studyMetadata": {
    "title": "Scatter Plot JND Study",
    "version": "pilot",
    "authors": ["The reVISit Team"],
    "date": "2024-06-26",
    "description": "This is a reVISit variation study of JND(Just Noticeable Difference) Scatter Plot experiment.",
    "organizations": ["University of Utah", "WPI", "University of Toronto"]
  },
  "uiConfig": {
    "contactEmail": "contact@revisit.dev",
    "helpTextPath": "ScatterJND-study/assets/help.md",
    "logoPath": "revisitAssets/revisitLogoSquare.svg",
    "withProgressBar": false,
    "autoDownloadStudy": false,
    "sidebar": false,
    "urlParticipantIdParam": "PROLIFIC_PID",
    "studyEndMsg": "**Thank you for completing the study. You may click this link and return to Prolific**: [yourProlificLink](yourProlificLink)"
  },
  "baseComponents": {
    "experimentRevised": {
      "type": "react-component",
      "path": "jnd-replication/vistaJND/src/components/vis/JNDScatterRevised.tsx",
      "response": [{ 
        "id": "scatterSelections",
        "prompt": "Select the option with the higher correlation",
        "required": false,
        "location": "aboveStimulus",
        "type": "reactive", 
        "hidden": true
      }]
    },
    "practiceBase": {
    "type": "react-component",
    "path": "jnd-replication/vistaJND/src/components/vis/PracticeScatter.tsx",
    "nextButtonLocation": "belowStimulus",
    "response": []
  }
  },
  "components": {
    "introduction": {
      "type": "markdown",
      "path": "ScatterJND-study/assets/introduction.md",
      "response": [
        {
            "id": "prolificId",
            "prompt": "Please enter your Prolific ID",
            "required": true,
            "location": "belowStimulus",
            "type": "shortText",
            "placeholder": "Prolific ID",
            "paramCapture": "PROLIFIC_PID"
        }
      ]
    },
    "training": {
      "type": "markdown",
      "path": "ScatterJND-study/assets/training.md",
      "response": []
    },
    "practice1": {
      "baseComponent": "practiceBase",
      "parameters": { "r1": 0.3, "r2": 0.7 }
    },
    "practice2": {
      "baseComponent": "practiceBase",
      "parameters": { "r1": 0.9, "r2": 0.6 }
    },
    "practice3": {
      "baseComponent": "practiceBase",
      "parameters": { "r1": 0.6, "r2": 0.3 }
    },
    "practice4": {
      "baseComponent": "practiceBase",
      "parameters": { "r1": 0.6, "r2": 0.9 }
    },
    "practice5": {
      "baseComponent": "practiceBase",
      "parameters": { "r1": 0.3, "r2": 0.1 }
    },
    "practice6": {
      "baseComponent": "practiceBase",
      "parameters": { "r1": 0.5, "r2": 0.3 }
    },
    "practice7": {
      "baseComponent": "practiceBase",
      "parameters": { "r1": 0.9, "r2": 0.8 }
    },
    "practice8": {
      "baseComponent": "practiceBase",
      "parameters": { "r1": 0.6, "r2": 0.7 }
    },
    "practice9": {
      "baseComponent": "practiceBase",
      "parameters": { "r1": 0.99, "r2": 0.9 }
    },
    "begin": {
      "type": "markdown",
      "path": "ParallelJND-study/assets/begin.md",
      "response": []
    },
    "trial": {
      "baseComponent": "experimentRevised"
    }
  },
  "sequence": {
    "order": "fixed",
    "components": [
      "introduction",
      "training",
      {
        "order": "fixed",
        "components": [
          "practice1", "practice2", "practice3",
          "practice4", "practice5", "practice6",
          "practice7", "practice8", "practice9"
        ]
      },
      "begin",
      {
        "order": "fixed",
        "components": [
          {
            "order": "dynamic",
            "id": "scatter1",
            "functionPath": "jnd-replication/vistaJND/src/components/vis/JNDDynamic.tsx",
            "parameters": {
              "r1": 0.3,
              "r2": 0.5,
              "above": true,
              "name": "scatter1"
            }
          },
          {
            "order": "dynamic",
            "id": "scatter2",
            "functionPath": "jnd-replication/vistaJND/src/components/vis/JNDDynamic.tsx",
            "parameters": {
              "r1": 0.9,
              "r2": 0.8,
              "above": false,
              "name": "scatter2"
            }
          },
          {
            "order": "dynamic",
            "id": "scatter3",
            "functionPath": "jnd-replication/vistaJND/src/components/vis/JNDDynamic.tsx",
            "parameters": {
              "r1": 0.6,
              "r2": 0.8,
              "above": true,
              "name": "scatter3"
            }
          }
        ]
      }
    ]
  }
}