{
  "$schema": "https://raw.githubusercontent.com/revisit-studies/study/v2.0.1/src/parser/StudyConfigSchema.json",
  "studyMetadata": {
    "title": "hindsight 255 Charts",
    "version": "pilot",
    "authors": [
      "The reVISit Team"
    ],
    "date": "2025-02-1",
    "description": "255 Chart from the Hindsight study",
    "organizations": [
      "University of Utah",
      "WPI",
      "University of Toronto"
    ]
  },
  "uiConfig": {
    "contactEmail": "contact@revisit.dev",
    "helpTextPath": "demo-hindsight255chart/assets/help.md",
    "logoPath": "revisitAssets/revisitLogoSquare.svg",
    "withProgressBar": true,
    "autoDownloadStudy": false,
    "sidebar": false,
    "windowEventDebounceTime": 200,
    "recordStudyAudio": true
  },
  "components": {
    "consent": {
      "type": "markdown",
      "path": "demo-hindsight255chart/assets/consent.md",
      "nextButtonLocation": "belowStimulus",
      "response": [
        {
          "id": "q-short-text",
          "prompt": "Your Prolific ID",
          "location": "belowStimulus",
          "type": "shortText",
          "placeholder": "Enter your prolific here"
        }
      ]
    },
    "training": {
      "type": "website",
      "path": "demo-hindsight255chart/assets/train.html",
      "nextButtonLocation": "belowStimulus",
      "response": []
    },
    "255Chart": {
      "type": "website",
      "nextButtonLocation": "belowStimulus",
      "path": "demo-hindsight255chart/assets/255charts/index.html",
      "response": [
        {
          "id": "visit",
          "prompt": "Answer:",
          "location": "belowStimulus",
          "type": "reactive",
          "hidden": false
        }
      ]
    },
    "debrief": {
      "type": "questionnaire",
      "nextButtonLocation": "belowStimulus",
      "response": [
        {
          "id": "finding1",
          "prompt": "Tell us about some findings you discovered in the data.",
          "location": "aboveStimulus",
          "type": "longText",
          "placeholder": "Your Finding 1"
        },
        {
          "id": "finding2",
          "prompt": "Tell us about some findings you discovered in the data.",
          "location": "aboveStimulus",
          "type": "longText",
          "placeholder": "Your Finding 2"
        },
        {
          "id": "finding3",
          "prompt": "Tell us about some findings you discovered in the data.",
          "location": "aboveStimulus",
          "type": "longText",
          "placeholder": "Your Finding 3"
        },
        {
          "id": "finding4",
          "prompt": "Tell us about some findings you discovered in the data.",
          "location": "aboveStimulus",
          "type": "longText",
          "placeholder": "Your Finding 4",
          "required": false
        },
        {
          "id": "finding5",
          "prompt": "Tell us about some findings you discovered in the data.",
          "location": "aboveStimulus",
          "type": "longText",
          "placeholder": "Your Finding 5",
          "required": false
        },
        {
          "id": "analysis-strategy",
          "prompt": "Please describe your general analysis strategy when interacting with the charts",
          "location": "aboveStimulus",
          "type": "longText",
          "placeholder": "Enter your comments here"
        },
        {
          "id": "revisit",
          "prompt": "Did you revisit any charts during your analysis? If so, how difficult was it to find the one you visited before?",
          "location": "aboveStimulus",
          "type": "longText",
          "placeholder": "Enter your comments here"

        }
        ]

    }
  },
  "sequence": {
    "order": "fixed",
    "components": [
      "consent",
      "training",
      "255Chart",
        "debrief"

    ]
  }
}
